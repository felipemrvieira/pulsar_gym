<%= form_with(model: address) do |form| %>
  <% if address.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(address.errors.count, "error") %> prohibited this address from being saved:</h2>

      <ul>
        <% address.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :street_name, style: "display: block" %>
    <%= form.text_field :street_name %>
  </div>

  <div>
    <%= form.label :building_number, style: "display: block" %>
    <%= form.text_field :building_number %>
  </div>

  <div>
    <%= form.label :complement, style: "display: block" %>
    <%= form.text_field :complement %>
  </div>
 
  <div class="field">
    <%= form.label :latitude %>
    <%= form.number_field :lat, step: :any %>
  </div>

  <div class="field">
    <%= form.label :longitude %>
    <%= form.number_field :lng, step: :any %>
  </div>

  <div>
    <%= form.label :neighbor_id, style: "display: block" %>
    <%= form.text_field :neighbor_id %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
